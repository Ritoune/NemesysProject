@model Bloggy.ViewModels.BlogDashboardViewModel

@{
    ViewData["Title"] = "Dashboard";
}

<h2>Dashboard</h2>

<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            <label asp-for="TotalEntries"></label>
        </dt>
