@model Bloggy.ViewModels.HallOfFameListViewModel

@{
    ViewData["Title"] = "Hall Of Fame ";
}

<h1>@ViewData["Title"]</h1>

<div class="row">
    @foreach (var fame in Model.HallOfFames)
    {
        <div class="card" style="width: 90%;padding:20px; margin:20px;">
        
            <div class="card-body">
                <p class="small">Type of hazard : @fame.Author.Name</p>
                <p class="small">Status : @fame.NumberOfReports.</p>
            </div>
        </div>
        }
</div>